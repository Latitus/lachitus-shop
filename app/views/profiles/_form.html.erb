<%= form_for(@profile) do |f| %>
   <div class="field form-group">
    <%= f.label :address, class: 'form-box__label' %><br>
    <%= f.text_field :address, class: 'form-control form-box__input'%>
  </div>
  <div class="field">
    <%= f.label :user_name, class: 'form-box__label' %><br>
    <%= f.text_field :user_name, class: 'form-control form-box__input'%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-default btn--primary form-box__button' %>
  </div>
<% end %>
