<%= render partial: "pages/section_header_bar" %>
<div class="container">
  <div class="row spacer-medium headspacer-medium ">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-8 form-box register-form">
      <h2 class="form-box__title text-center spacer-small">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :email ,class: 'form-box__label' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control form-box__input', placeholder: 'email@lachitus.com' %>
        </div>

        <div class="field form-group">
          <%= f.label :password ,class: 'form-box__label' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control form-box__input', placeholder: '******' %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation ,class: 'form-box__label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-box__input', placeholder: '******' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-default btn--primary form-box__button' %>
        </div>
      <% end %>

      <p class="text-center register-link">
        <%= render "devise/shared/links" %>
      </p>

    </div> <!-- /.col -->
  </div> <!-- /.row -->
</div> <!-- /.container -->
