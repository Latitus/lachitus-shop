<div class="container">
  <div class="row spacer-medium headspacer-medium ">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 form-box">
      <h2 class="form-box__title text-center spacer-small">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :email ,class: 'form-box__label' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control form-box__input', placeholder: 'your_email@example.com' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-default btn--primary form-box__button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div> <!-- /.col -->
  </div> <!-- /.row -->
</div> <!-- /.container -->
